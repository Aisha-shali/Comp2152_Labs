def trade(hero_position):
    if hero_position == (4, 3):  # Town 2
        print("Hero can buy armor but cannot sell.")
        available_armor = ["Iron Shield", "Steel Sword"]
        print(f"Available armor: {available_armor}")
    else:
        print("Hero can sell armor but cannot buy.")
        hero_loot = ["Gold Ring", "Silver Dagger"]
        print(f"Hero can sell: {hero_loot}")

# Test the trade function
trade(hero_position)
